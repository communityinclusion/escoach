{#
/**
 * @file
 * Default theme implementation of the Superfish menus.
 *
 * Available variables:
 * - id: Unique menu identifier.
 * - menu_classes: Menu classes.
 * - menu_items: Menu tree.
 *
 * @see template_preprocess_superfish()
 *
 * @ingroup themeable
 */
#}

<ul id="{{ id }}" class="{{ menu_classes }} clearfix">
  {{ menu_items }}
 {% if id=='superfish-user-menu' %}
    {% if logged_in %}
      <li class="sf-depth-1 sf-no-children"><a href="/user/{{ uid }}/survey_participants">Stop/Resume survey</a></li>
      <li class="sf-depth-1 sf-no-children"><a href="/user/{{ uid }}/edit">Change password</a></li>
      <li class="sf-depth-1 sf-no-children"><a href="/user/logout">Log out</a></li>
    {% else %}
      <li class="sf-depth-1 sf-no-children"><a href="/register-survey">Sign up for an account</a></li>
       <li class="sf-depth-1 sf-no-children"><a href="/user/login">Log in to your account</a></li>
    {% endif %}

  {% endif %}
</ul>
